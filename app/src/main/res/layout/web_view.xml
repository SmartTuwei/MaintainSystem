<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/v4_drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/v4_drawerlayout_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <WebView
                android:id="@+id/webcontentbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="40dp">
            </WebView>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/bottom_lin"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/silver"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Callbackindex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="首页"
                    android:textColor="@color/darkorange"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/peopleData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="个人信息"
                    android:textColor="@color/crimson"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/MyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="我的"
                    android:textColor="@color/cyan"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Userbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="用户"
                    android:textColor="@color/darkslateblue"
                    android:textSize="18dp" />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/v4_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />
        <ListView
            android:id="@+id/v4_listview"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/aquamarine"
            android:choiceMode="singleChoice" />
    </android.support.v4.widget.DrawerLayout>


</LinearLayout>
